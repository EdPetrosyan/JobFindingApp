@model JobFindingModels.Job

@{
    ViewData["Title"] = "Create Job";
}

<h1>Create Job</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Jobs" asp-action="AddJob" name="job">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" id="Name" class ="form-control" asp-items="ViewBag.Categories"></select>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" id="Name"  class="form-control" asp-items="ViewBag.Companies"></select>
            </div>
            <div class="form-group">
                <label asp-for="JobTypeId" class="control-label"></label>
                <select asp-for="JobTypeId" id="Type" class ="form-control" asp-items="ViewBag.JobTypes"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="AddJob" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Jobs">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
